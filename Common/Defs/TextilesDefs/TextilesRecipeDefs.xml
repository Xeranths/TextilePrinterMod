        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
	    <categories>
		<li>MeatRaw</li>
	    </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
	<categories>
	    <li>PlantMatter</li>
	    <li>Foods</li>
	</categories>
	<disallowedCategories>
            <li>FoodMeals</li>
        </disallowedCategories>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
