      <li>
        <filter>
	    <categories>
		<li>PlantMatter</li>
		<li>Foods</li>
	    </categories>
	    <disallowedCategories>
                <li>FoodMeals</li>
            </disallowedCategories>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
	    <thingDefs>
		<li>Meat_Thrumbo</li>
	    </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
	<categories>
	    <li>PlantMatter</li>
	    <li>Foods</li>
